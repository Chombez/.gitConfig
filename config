[user]

	name = Ryan Dicembre
	email = ryan.dicembre@optiver.com.au

[core]

	editor = vim
	excludesfile = ~/.config/git/.globalignore
	hooksPath = ~/.config/git/templates/hooks
	pager = "diff-highlight | less -RFXx4"

[init]
	templateDir = ~/.config/git/templates

[color]

	ui = auto

[color "diff"]

	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]

	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"

[diff]

	# Use more time for better diffs
	algorithm = minimal
	# Detect renames and copies
	renames = copies
	# Use vimdiff when using `git difftool`
	tool = vimdiff
	# Shift diff hunk boundaries to make patches easier to read.
	indentHeuristic = true

[alias]

	lg = log --graph --decorate --date=relative --abbrev-commit
	sdiff = diff --cached
	co = checkout
	st = status --branch --short
	cf = clang-format

[push]

	default = simple

[commit]

# Default commit message
	template = ~/.config/git/templates/commit_message
# Show diff in commit message commented out
	verbose = true

